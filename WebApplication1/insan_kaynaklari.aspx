                                              document.addEventListener('DOMContentLoaded', function () {
                                                  var accBtns = document.querySelectorAll('.acc-btn');

                                                  accBtns.forEach(function (accBtn) {
                                                      accBtn.addEventListener('click', function () {
                                                          // Tıklanan düğmenin içindeki h4 elementini seç
                                                          var h4Element = accBtn.querySelector('h4');

                                                          // Mevcut durumu kontrol et
                                                          var isSelected = h4Element.classList.contains('selected');

                                                          // Diğer tüm "acc-btn" elemanlarındaki "selected" sınıfını kaldır
                                                          accBtns.forEach(function (btn) {
                                                              btn.querySelector('h4').classList.remove('selected');
                                                          });

                                                          // isSelected true ise, 'selected' sınıfını kaldır; değilse ekle
                                                          if (!isSelected) {
                                                              h4Element.classList.add('selected');
                                                          }
                                                      });
                                                  });
                                              });
                                              $(document).ready(function () {
                                                  var animTime = 300,
                                                      clickPolice = false;

                                                  $(document).on('touchstart click', '.acc-btn', function () {
                                                      if (!clickPolice) {
                                                          clickPolice = true;

                                                          var currIndex = $(this).index('.acc-btn'),
                                                              targetHeight = $('.acc-content-inner').eq(currIndex).outerHeight();

                                                          $(this).find('h4').addClass('selected');
                                                          $(".acc-btn").one("click", function () {
                                                              $(".acc-content").slideToggle(0); // 0 süre ile hemen açılıp kapanır

                                                          });
                                                          $('.acc-content').stop().animate({ height: 0 }, animTime);
                                                          $('.acc-content').eq(currIndex).stop().animate({ height: targetHeight }, animTime);

                                                          setTimeout(function () { clickPolice = false; }, animTime);
                                                      }

                                                  });

                                              });
